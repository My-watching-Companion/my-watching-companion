<!DOCTYPE html>

<html lang="en">

<head>
  <%- include('components/head', { selected }) %>

  <link rel="stylesheet" href="/styles/artwork.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
  <script src="/scripts/color-thief.js"></script>
  <script src="/scripts/artwork-theme.js"></script>
</head>

<body>
  <header>
    <%- include('components/header', { selected }) %>
  </header>

  <%- include('components/sidebar') %>

  <main>
    <section id="artwork-container">
      <div class="artwork-header">
        <img crossorigin="anonymous" src="https://image.tmdb.org/t/p/w500<%= artwork.ArtworkPosterImage %>" alt="<%= artwork.ArtworkName %>" />
        <div class="artwork-info">
          <h1 id="title"><%= artwork.ArtworkName %></h1>
          <div class="user-actions">
            <div class="rating">
              <div class="stars">
                <span class="material-symbols-rounded">star</span>
                <span class="material-symbols-rounded">star</span>
                <span class="material-symbols-rounded">star</span>
                <span class="material-symbols-rounded">star</span>
                <span class="material-symbols-rounded">star</span>
              </div>
              <span class="rating-value"><%= artwork.ArtworkTMDB.vote_average.toFixed(1) %>/10</span>
            </div>
            <select class="watch-status">
              <option value="">Watch Status</option>
              <option value="planning">Plan to Watch</option>
              <option value="watching">Watching</option>
              <option value="completed">Completed</option>
              <option value="dropped">Dropped</option>
            </select>
          </div>
          <div id="genres">
            <% for( const genre of artwork.ArtworkTMDB.genres ) { %>
            <div class="genre"><%= genre.name %></div>
            <% } %>
          </div>
          <div id="details">
            <div class="detail">
              <span class="material-symbols-rounded">calendar_month</span>
              <span class="value"><%= artwork.ArtworkTMDB.release_date %></span>
            </div>
            <div class="detail">
              <span class="material-symbols-rounded">schedule</span>
              <span class="value"><%= artwork.ArtworkTMDB.runtime %> minutes</span>
            </div>
            <div class="detail">
              <span class="material-symbols-rounded">info</span>
              <span class="value"><%= artwork.ArtworkTMDB.status %></span>
            </div>
          </div>
          <p id="description">
            <%= artwork.ArtworkTMDB.overview === "" ? "Aucune description disponible." : artwork.ArtworkTMDB.overview %>
          </p>
        </div>
      </div>
    </section>

    <section id="comments">
      <h2>Comments</h2>

      <form id="comment-form">
        <textarea id="comment" name="comment" placeholder="Share your thoughts..."></textarea>
        <button type="submit">Post Comment</button>
      </form>
      <div class="comments-list">
        <!-- Comments will be populated here -->
      </div>
    </section>
  </main>

  <footer>
    <%- include('components/footer') %>
  </footer>
</body>

</html>